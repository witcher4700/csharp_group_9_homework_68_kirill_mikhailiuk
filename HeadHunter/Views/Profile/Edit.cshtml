@model User
@{
    ViewBag.Title = Model.UserName;
}
<form asp-action="Edit" asp-controller="Profile" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Email" class="control-label">Номер телефона:</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Avatar" class="control-label">Аватар</label>
        <input type="text" asp-for="Avatar" class="form-control" />
    </div>
    <input asp-for="Id" type="hidden" value="@Model.Id">
    <input asp-for="UserName" type="hidden" value="@Model.UserName">
    <input asp-for="Email" type="hidden" value="@Model.Email">
    <div class="form-group">
        <input type="submit" value="Изменить" class="btn btn-default" />
    </div>
</form>