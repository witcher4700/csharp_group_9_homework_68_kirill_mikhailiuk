<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyBlog</title>
    <script src="https://kit.fontawesome.com/1f84b24a08.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Post" asp-action="Index"><span style="font-size: 36px;"> <i class="fab fa-instagram"></i>  | <img src="/images/Instagram_Logo_Large.png" alt="Logo" width="124" height="52" /> </span> </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <form class="form-inline" asp-action="Search" asp-controller="Post">
                        <input type="text" name="query" class="form-control" value="" />
                        <input type="submit" value="Поиск" class="btn btn-default" />
                    </form>
                }
                <div class="login_group d-flex row">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <p>
                            <a asp-action="Index" asp-controller="Profile" asp-route-name="@User.Identity.Name"><span style="font-size: 36px;"><i class="far fa-user mt-1 text-secondary"></i></span></a>
                        </p>
                        <form method="post" asp-controller="Account" asp-action="LogOff">
                            <input type="submit" class="mt-3 ml-2 btn btn-default" value="Выход" />
                        </form>

                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login">Вход</a>
                        <a asp-controller="Account" asp-action="Register">Регистрация</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MyBlog - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
